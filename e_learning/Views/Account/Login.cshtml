@model e_learning.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- MDB -->
    <link href="https://cdn.jsdelivr.net/npm/mdbootstrap5-pro@1.0.0/css/mdb.min.css" rel="stylesheet">
</head>
<body>
    <section class="vh-100 align-content-center">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                         class="img-fluid" alt="Sample image">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                            <p class="lead fw-normal mb-0 me-3 mx-5">Sign in with</p>
                            <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-facebook-f"></i>
                            </button>

                            <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-twitter"></i>
                            </button>

                            <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-linkedin-in"></i>
                            </button>
                        </div>

                        <hr />

                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0">Or</p>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <!-- Email input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", @placeholder = "Enter a valid email address", @id = "form3Example3" })
                            @Html.LabelFor(m => m.Email, new { @class = "form-label", @for = "form3Example3" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <!-- Password input -->
                        <div data-mdb-input-init class="form-outline mb-3">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", @placeholder = "Enter password", @id = "form3Example4" })
                            @Html.LabelFor(m => m.Password, new { @class = "form-label", @for = "form3Example4" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Checkbox -->
                            <div class="form-check mb-0">
                                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                                <label class="form-check-label" for="form2Example3">
                                    Remember me
                                </label>
                            </div>
                            <a href="#!" class="text-body">Forgot password?</a>
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                Login
                            </button>
                            <p class="small fw-bold mt-2 pt-1 mb-0">
                                Don't have an account? @Html.ActionLink("Register", "Register", "Account", null, new { @class = "link-danger" })
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- MDB -->
    <script src="https://cdn.jsdelivr.net/npm/mdbootstrap5-pro@1.0.0/js/mdb.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            MDB.init();
        });
    </script>
</body>
</html>
