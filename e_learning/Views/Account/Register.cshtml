@model e_learning.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- MDB -->
    <link href="https://cdn.jsdelivr.net/npm/mdbootstrap5-pro@1.0.0/css/mdb.min.css" rel="stylesheet">
</head>
<body>
    <section class="vh-100">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" >
                        <div class="card-body p-md-5" style="border: none; box-shadow: revert">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "mx-1 mx-md-4" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw mx-3"></i>
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "form3Example1c" })
                                                @Html.LabelFor(m => m.UserName, new { @class = "form-label", @for = "form3Example1c" })
                                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw mx-3"></i>
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "form3Example3c" })
                                                @Html.LabelFor(m => m.Email, new { @class = "form-label", @for = "form3Example3c" })
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw mx-3"></i>
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "form3Example4c" })
                                                @Html.LabelFor(m => m.Password, new { @class = "form-label", @for = "form3Example4c" })
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-key fa-lg me-3 fa-fw mx-3"></i>
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "form3Example4cd" })
                                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label", @for = "form3Example4cd" })
                                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg">Register</button>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- MDB -->
    <script src="https://cdn.jsdelivr.net/npm/mdbootstrap5-pro@1.0.0/js/mdb.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            MDB.init();
        });
    </script>
</body>
</html>
