@model List<Data_Oracle.Entities.Course>

@{
    ViewBag.Title = "Bảng điều khiển giảng viên";
    Layout = "~/Views/Shared/_Layout_Lecture.cshtml";
}

<style>
    /* 1. Card Thống Kê */
    .stat-card {
        background: #fff;
        border-radius: 16px;
        border: none;
        padding: 25px;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 10px 20px rgba(0,0,0,0.05);
        height: 100%;
        display: flex;
        align-items: center;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

    .stat-icon-wrapper {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        margin-right: 20px;
        flex-shrink: 0; /* Không bị co lại */
    }

    /* Màu sắc riêng cho từng card */
    .stat-blue .stat-icon-wrapper {
        background: rgba(13, 110, 253, 0.1);
        color: #0d6efd;
    }

    .stat-green .stat-icon-wrapper {
        background: rgba(25, 135, 84, 0.1);
        color: #198754;
    }

    .stat-orange .stat-icon-wrapper {
        background: rgba(255, 193, 7, 0.1);
        color: #ffc107;
    }

    .stat-content h3 {
        font-weight: 800;
        margin: 0;
        font-size: 2rem;
        color: #333;
    }

    .stat-content p {
        margin: 0;
        color: #888;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* 2. Banner Chào Mừng */
    .welcome-banner {
        background: linear-gradient(135deg, #06BBCC 0%, #2980b9 100%);
        color: white;
        border-radius: 16px;
        padding: 40px;
        margin-bottom: 40px;
        box-shadow: 0 10px 25px rgba(6, 187, 204, 0.3);
        position: relative;
        overflow: hidden;
    }

    /* 3. Bảng Danh Sách */
    .table-card {
        border-radius: 16px;
        border: none;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        overflow: hidden;
        background: #fff;
    }

    /* Badge trạng thái đẹp hơn */
    .badge-soft-success {
        background-color: rgba(25, 135, 84, 0.1);
        color: #198754;
        padding: 6px 12px;
        border-radius: 30px;
        font-weight: 600;
        font-size: 0.8rem;
        display: inline-block;
    }

    .badge-soft-warning {
        background-color: rgba(255, 193, 7, 0.15);
        color: #d68e00;
        padding: 6px 12px;
        border-radius: 30px;
        font-weight: 600;
        font-size: 0.8rem;
        display: inline-block;
    }

    /* Nút hành động */
    .btn-icon {
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        border: none;
        transition: all 0.2s;
        margin: 0 2px;
        text-decoration: none !important;
    }

        .btn-icon:hover {
            transform: scale(1.1);
        }

    .btn-view {
        background: #e7f1ff;
        color: #0d6efd;
    }

    .btn-edit {
        background: #fff3cd;
        color: #ffc107;
    }

    .btn-delete {
        background: #f8d7da;
        color: #dc3545;
    }

    .course-img {
        width: 60px;
        height: 40px;
        object-fit: cover;
        border-radius: 6px;
    }
</style>

<div class="container py-5">

    <div class="welcome-banner wow fadeInUp" data-wow-delay="0.1s">
        <div class="row align-items-center position-relative" style="z-index: 1;">
            <div class="col-lg-8">
                <h1 class="fw-bold mb-2">Xin chào, Giảng viên!</h1>
                <p class="lead mb-0 opacity-75">Chúc bạn một ngày làm việc hiệu quả.</p>
            </div>
            <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                <a href="@Url.Action("CreateCourse", "Lecture")" class="btn btn-light text-primary fw-bold px-4 py-2 shadow-sm rounded-pill border-0">
                    <i class="bi bi-plus-circle-fill me-2"></i> Tạo khóa học mới
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4 wow fadeInUp" data-wow-delay="0.1s">
            <div class="stat-card stat-blue">
                <div class="stat-icon-wrapper"><i class="bi bi-journal-bookmark-fill"></i></div>
                <div class="stat-content">
                    <p>Khóa học</p>
                    <h3>@Model.Count</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 wow fadeInUp" data-wow-delay="0.2s">
            <div class="stat-card stat-green">
                <div class="stat-icon-wrapper"><i class="bi bi-people-fill"></i></div>
                <div class="stat-content">
                    <p>Học viên</p>
                    <h3>@(ViewBag.TotalStudents ?? "0")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 wow fadeInUp" data-wow-delay="0.3s">
            <div class="stat-card stat-orange">
                <div class="stat-icon-wrapper"><i class="bi bi-star-fill"></i></div>
                <div class="stat-content">
                    <p>Đánh giá</p>
                    <h3>@(ViewBag.AvgRating ?? "0.0") <small class="fs-6 text-muted fw-normal">/5</small></h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row wow fadeInUp" data-wow-delay="0.4s">
        <div class="col-12">
            <div class="card table-card h-100">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-list-task me-2 text-primary"></i>Danh sách khóa học</h5>
                    <div class="input-group w-auto d-none d-md-flex">
                        <input type="text" class="form-control form-control-sm border-end-0" placeholder="Tìm kiếm..." style="border-radius: 20px 0 0 20px; padding-left: 15px;">
                        <span class="input-group-text bg-white border-start-0" style="border-radius: 0 20px 20px 0;"><i class="bi bi-search"></i></span>
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="bg-light text-secondary small text-uppercase">
                                <tr>
                                    <th class="ps-4 py-3" style="width: 40%;">Khóa học</th>
                                    <th style="width: 15%;">Giá bán</th>
                                    <th style="width: 15%;">Ngày tạo</th>
                                    <th style="width: 15%;">Trạng thái</th>
                                    <th style="width: 15%;">Dùng thử</th>
                                    <th class="text-end pe-4" style="width: 15%;">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr class="course-row">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <img src="~/Content/Assets/images/courses/@item.Image"
                                                         class="course-img shadow-sm me-3"
                                                         onerror="this.src='https://via.placeholder.com/60x40?text=IMG'" />
                                                    <div>
                                                        <div class="fw-bold text-dark text-truncate" style="max-width: 200px;">@item.CourseName</div>
                                                        <small class="text-muted">ID: @((int)item.CourseID)</small>
                                                    </div>
                                                </div>
                                            </td>

                                            <td class="fw-bold text-primary">
                                                @String.Format("{0:#,##0} đ", item.Price)
                                            </td>

                                            <td class="text-muted small">
                                                @(item.CreatedDate.HasValue ? item.CreatedDate.Value.ToString("dd/MM/yyyy") : "--")
                                            </td>

                                            <td>
                                                @if (item.CourseStatusID == 1)
                                                {
                                                    <span class="badge-soft-warning">
                                                        <i class="bi bi-clock-history me-1"></i> Chờ duyệt
                                                    </span>
                                                }
                                                else if (item.CourseStatusID == 2)
                                                {
                                                    <span class="badge-soft-success">
                                                        <i class="bi bi-check-circle-fill me-1"></i> Đã duyệt
                                                    </span>
                                                }
                                                else if (item.CourseStatusID == 3)
                                                {
                                                    <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill fw-bold" style="font-size: 0.8rem;">
                                                        <i class="bi bi-x-circle-fill me-1"></i> Bị từ chối
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary bg-opacity-25 text-secondary px-3 py-2 rounded-pill fw-bold">Nháp</span>
                                                }
                                            </td>

                                            <td>
                                                @if (item.IsTrialAvailable == true)
                                                {
                                                    <span class="badge-soft-success">Công khai</span>
                                                }
                                                else
                                                {
                                                    <span class="badge-soft-warning">Cho Phép Thử</span>
                                                }
                                            </td>

                                            <td class="text-end pe-4">
                                                <div class="d-flex justify-content-end gap-1">

                                                    <a href="@Url.Action("CourseLearn", "Course", new { courseID = (int)item.CourseID })"
                                                       target="_blank" class="btn-icon btn-view" title="Xem trước nội dung">
                                                        <i class="bi bi-eye"></i>
                                                    </a>

                                                    <a href="@Url.Action("ManageCourseContent", "Lecture", new { id = (int)item.CourseID })"
                                                       class="btn-icon btn-edit" title="Biên tập nội dung">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </a>

                                                    <form action="@Url.Action("DeleteCourse", "Lecture")" method="post" style="display:inline-block;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@((int)item.CourseID)" />
                                                        <button type="submit" class="btn-icon btn-delete" title="Xóa khóa học"
                                                                onclick="return confirm('CẢNH BÁO: Bạn có chắc chắn muốn xóa khóa học này không?');">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>

                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5">
                                            <div class="text-muted opacity-50 mb-3"><i class="bi bi-inbox fs-1"></i></div>
                                            <p class="text-muted mb-2">Bạn chưa có khóa học nào.</p>
                                            <a href="@Url.Action("CreateCourse", "Lecture")" class="btn btn-sm btn-primary rounded-pill px-4">Tạo ngay</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>