<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - Giảng viên</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <link href="~/Content/Assets/template01/img/favicon.ico" rel="icon">

    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <link href="~/Content/Assets/template01/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/template01/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <link href="~/Content/Assets/template01/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/template01/css/style.css" rel="stylesheet" />

    <style>
        /* Sửa lỗi vỡ layout: Dùng Flexbox để đẩy Footer xuống đáy */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content-wrapper {
            flex: 1; /* Chiếm toàn bộ khoảng trống còn lại */
        }

        .instructor-brand {
            border-left: 2px solid #06BBCC;
            padding-left: 10px;
            margin-left: 10px;
            font-size: 0.9em;
            color: #666;
            font-weight: bold;
        }

        /* Fix Navbar không bị đè */
        .navbar {
            z-index: 1030;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
        <a href="@Url.Action("LectureHomePage", "Lecture")" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0 text-primary"><i class="fa fa-book me-3"></i>eLEARNING</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="@Url.Action("LectureHomePage", "Lecture")" class="nav-item nav-link active">Home</a>
                <a href="@Url.Action("About", "Home")" class="nav-item nav-link">About</a>
                <a href="@Url.Action("MyCourses", "Course")" class="nav-item nav-link">Courses</a>
                <a href="@Url.Action("Logout", "Account")" class="nav-item nav-link">Logout</a>
            </div>

        </div>
    </nav>
    <div class="content-wrapper bg-light">
        @RenderBody()
    </div>

    @Html.Partial("_Footer")

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Assets/template01/lib/wow/wow.min.js"></script>
    <script src="~/Content/Assets/template01/lib/easing/easing.min.js"></script>
    <script src="~/Content/Assets/template01/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Content/Assets/template01/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Content/Assets/template01/js/main.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>