@* Đặt model là model Lession của bạn *@
@model Data_Oracle.Entities.Lession

@* Hoặc nếu bạn dùng Data_Oracle.Entities.Lession, hãy dùng:
    @model Data_Oracle.Entities.Lession
*@

@if (Model != null)
{
    @* Sử dụng thẻ <video> của HTML5 vì bạn đang dùng file video local.
        Cái <iframe> bị comment trong mã của bạn là dành cho YouTube.
    *@
    <video controls autoplay width="100%" style="aspect-ratio: 16 / 9;">
        <source src="@Url.Content("~/Content/Assets/videos/course/" + Model.VideoData)" type="video/mp4">
        Trình duyệt của bạn không hỗ trợ thẻ video.
    </video>

    <div class="justify-content-lg-between w-100 d-flex mt-3">
        <div class="action-links justify-content-between w-50">
            <a href="#" class="action-link mx-2">
                <i class="fas fa-thumbs-up"></i> Like
            </a>
            <a href="#" class="action-link mx-2">
                <i class="fas fa-thumbs-down"></i> Dislike
            </a>
            <a href="#" class="action-link mx-2">
                <i class="fas fa-flag"></i> Report an issue
            </a>
        </div>
        <button class="btn btn-outline">
            NEXT <i class="bi bi-chevron-right"></i>
        </button>
    </div>

}
else
{
    <p>Vui lòng chọn một bài học để bắt đầu.</p>
}
