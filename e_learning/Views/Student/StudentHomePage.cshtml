@model List<Data_Oracle.Entities.Course>

@{
    ViewBag.Title = "StudentHomePage";
    Layout = "~/Views/Shared/_Layout_Student.cshtml";
}


<style>
    /* Làm ảnh sáng hơn một chút, nhẹ nhưng tinh tế */
    #heroCarousel .carousel-item img {
        object-fit: cover;
        height: 450px;
        filter: brightness(85%);
        border-radius: 10px;
    }

    /* Caption gọn, xuống dưới nhẹ nhàng */
    #heroCarousel .carousel-caption {
        bottom: 25px;
        text-align: left;
        left: 40px;
    }

        /* Không dùng shadow mạnh, chỉ 1 chút để chữ không chìm */
        #heroCarousel .carousel-caption h2,
        #heroCarousel .carousel-caption p {
            text-shadow: 0 1px 4px rgba(0,0,0,0.4);
        }

    /* Indicators mềm mại */
    .carousel-indicators button {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: #fff !important;
        opacity: 0.6;
    }

    .carousel-indicators .active {
        opacity: 1;
    }

    /* Controls nhẹ, không quá nổi */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: invert(1);
    }
</style>


<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">

    <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2"></button>
    </div>

    <div class="carousel-inner">

        <div class="carousel-item active">
            <img src="~/Content/Assets/template01/img/carousel-1.jpg" class="d-block w-100">
            <div class="carousel-caption">
                <h2 class="text-white fw-semibold">Welcome to LMS</h2>
                <p class="text-light mb-2">Learning made simple.</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/Content/Assets/template01/img/carousel-2.jpg" class="d-block w-100">
            <div class="carousel-caption">
                <h2 class="text-white fw-semibold">High Quality Courses</h2>
                <p class="text-light mb-2">With real-world experience.</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/Content/Assets/template01/img/carousel-3.jpg" class="d-block w-100">
            <div class="carousel-caption">
                <h2 class="text-white fw-semibold">Grow Together</h2>
                <p class="text-light mb-2">Join our learning community.</p>
            </div>
        </div>

    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>


<!-- Learn From Trusted English Centers -->
<div class="container py-5">
    <div class="text-center mb-4">
        <h4 class="fw-semibold">Learn from Trusted English Centers</h4>
        <p class="text-muted" style="max-width: 550px; margin: auto;">
            Học tập cùng các tổ chức đào tạo tiếng Anh hàng đầu, mang đến chương trình học chuẩn quốc tế và hiệu quả.
        </p>
    </div>

    <div class="row justify-content-center g-4">

        <!-- British Council -->
        <div class="col-6 col-md-3 text-center">
            <img src="~/Content/Assets/images/icon2.png" alt="British Council" height="45" class="mb-2">
            <p class="text-muted small mb-0">British Council</p>
        </div>

        <!-- ILA -->
        <div class="col-6 col-md-3 text-center">
            <img src="~/Content/Assets/images/icon1.png" alt="ILA" height="45" class="mb-2">
            <p class="text-muted small mb-0">ILA Vietnam</p>
        </div>

        <!-- VUS -->
        <div class="col-6 col-md-3 text-center">
            <img src="~/Content/Assets/images/icon3.png" alt="VUS" height="45" class="mb-2">
            <p class="text-muted small mb-0">VUS - Anh Văn Hội Việt Mỹ</p>
        </div>

        <!-- Apollo -->
        <div class="col-6 col-md-3 text-center">
            <img src="~/Content/Assets/images/icon4.png" alt="Apollo English" height="45" class="mb-2">
            <p class="text-muted small mb-0">Apollo English</p>
        </div>

    </div>
</div>


<!-- Courses Start -->

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3 mb-5">Courses</h6>
        </div>
        <div class="row g-4 justify-content-center">

            <!-- Tabs -->
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#tab-all" type="button" role="tab">All</button>
                    <button class="nav-link" id="video-tab" data-bs-toggle="tab" data-bs-target="#tab-video" type="button" role="tab">Video</button>
                    <button class="nav-link" id="class-tab" data-bs-toggle="tab" data-bs-target="#tab-class" type="button" role="tab">Class</button>
                </div>
            </nav>

            <div class="tab-content" id="nav-tabContent">

                <!-- TAB ALL -->
                <div class="tab-pane fade show active" id="tab-all" role="tabpanel">
                    <div class="container-xxl py-5">
                        <div class="container">
                            <div class="row g-4 justify-content-center">

                                <!-- COURSE ITEM -->

                                @foreach(var x in Model)
                                {
                                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                        <div class="course-item bg-light">
                                            <div class="position-relative overflow-hidden">
                                                <img class="img-fluid" src="~/Content/Assets/template01/img/course-1.jpg" alt="">
                                                <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                                    <a href="@Url.Action("CourseDetail", "Course")" class="btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Read More</a>
                                                    <a href="#" class="btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Join Now</a>
                                                </div>
                                            </div>
                                            <div class="text-center p-4 pb-0">
                                                <h3 class="mb-0">@x.Price</h3>
                                                <div class="mb-3">
                                                    <small class="fa fa-star text-primary"></small>
                                                    <small class="fa fa-star text-primary"></small>
                                                    <small class="fa fa-star text-primary"></small>
                                                    <small class="fa fa-star text-primary"></small>
                                                    <small class="fa fa-star text-primary"></small>
                                                    <small>(123)</small>
                                                </div>
                                                <h5 class="mb-4">@x.CourseName</h5>
                                            </div>
                                            <div class="d-flex border-top">
                                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>John Doe</small>
                                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>1.49 Hrs</small>
                                                <small class="flex-fill text-center py-2"><i class="fa fa-user text-primary me-2"></i>30 Students</small>
                                            </div>
                                        </div>
                                    </div>
                                   }

                                
                                <!-- COURSE ITEM -->

                            </div>
                            <!-- row -->
                            <nav aria-label="Page navigation" class="mt-4">
                                <ul class="pagination pagination-sm d-flex justify-content-center">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>

                <!-- TAB VIDEO -->
                <div class="tab-pane fade" id="tab-video" role="tabpanel">
                    <div class="container py-5">

                        <p class="text-center text-muted">Sẽ load dữ liệu sau...</p>
                    </div>
                </div>

                <!-- TAB CLASS -->
                <div class="tab-pane fade" id="tab-class" role="tabpanel">
                    <div class="container py-5">

                        <p class="text-center text-muted">Sẽ load dữ liệu sau...</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Courses End -->
